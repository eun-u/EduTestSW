{
  "name": "Performance - 통합 루틴",
  "driver": "backend",
  "steps": [
    {
      "assessment": "performance",
      "type": "report_response_time",
      "targets": [
        { "name": "GET/posts", "method": "GET", "url": "https://jsonplaceholder.typicode.com/posts" },
        { "name": "POST/posts", "method": "POST", "url": "https://jsonplaceholder.typicode.com/posts", "json": { "title": "foo", "body": "bar", "userId": 1 } }
      ],
      "repeats": 5,
      "warmups": 1,
      "thresholds": { "*": 0.300 },
      "rule": "p95<=threshold"
    },
    {
      "assessment": "performance",
      "type": "compare_processing_time",
      "targets": [
        { "name": "GET/posts",    "method": "GET",  "url": "https://jsonplaceholder.typicode.com/posts",   "timeout": 5 },
        { "name": "GET/comments", "method": "GET",  "url": "https://jsonplaceholder.typicode.com/comments","timeout": 5 }
      ],
      "repeats": 10,
      "warmups": 1,
      "thresholds": { "*": 0.300 },
      "rule": "p95<=threshold",
      "metric": "avg",
      "anomaly": {
        "method": "robust_z",
        "z_thresh": 0.8,
        "factor_baseline": 1.01,
        "min_samples": 3 }
    },
    {
      "assessment": "performance",
      "type": "warn_timeout",
      "targets": [
        { "name": "GET/posts",    "method": "GET", "url": "https://jsonplaceholder.typicode.com/posts",    "timeout": 5 },
        { "name": "GET/comments", "method": "GET", "url": "https://jsonplaceholder.typicode.com/comments", "timeout": 5 }
      ],
      "repeats": 10,
      "warmups": 1,
      "thresholds": { "*": 0.300 },
      "percent_limit": 10.0
    }
  ]
}
