{
  "name": "Performance - 보고서 기반 기능별 처리시간 비교 (Playwright, Anomaly On)",
  "driver": "playwright",
  "steps": [
    {
      "assessment": "performance",
      "type": "compare_processing_time",
      "actions": [
        { "name": "goto/posts", "op": "goto", "url": "https://jsonplaceholder.typicode.com/posts" },
        { "name": "goto/comments", "op": "goto", "url": "https://jsonplaceholder.typicode.com/comments" }
      ],
      "repeats": 10,
      "warmups": 1,
      "thresholds": { "*": 1.200 },
      "rule": "p95<=threshold",
      "metric": "avg",
      "anomaly": {
        "method": "robust_z",
        "z_thresh": 0.8,
        "factor_baseline": 1.01,
        "min_samples": 2
      }
    }
  ]
}