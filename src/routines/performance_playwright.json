{
  "name": "[SW] Performance 실행효율성",
  "driver": "playwright",
  "page": {
    "browser": "chromium",
    "headless": true,
    "viewport": { "width": 1280, "height": 800 }
  },
  "steps": [
    {
      "assessment": "performance",
      "type": "report_response_time",
      "actions": [
        { "name": "Open Home",   "op": "goto", "url": "https://jsonplaceholder.typicode.com/" },
        { "name": "Open/posts", "op": "goto", "url": "https://jsonplaceholder.typicode.com/posts" }
      ],
      "repeats": 3,
      "warmups": 1,
      "thresholds": { "*": 1.200 },
      "rule": "p95<=threshold"
    },
    {
      "assessment": "performance",
      "type": "compare_processing_time",
      "actions": [
        { "name": "goto/posts", "op": "goto", "url": "https://jsonplaceholder.typicode.com/posts" },
        { "name": "goto/comments", "op": "goto", "url": "https://jsonplaceholder.typicode.com/comments" }
      ],
      "repeats": 10,
      "warmups": 1,
      "thresholds": { "*": 1.200 },
      "rule": "p95<=threshold",
      "metric": "avg",
      "anomaly": {
        "method": "robust_z",
        "z_thresh": 0.8,
        "factor_baseline": 1.01,
        "min_samples": 2
      }
    },
    {
      "assessment": "performance",
      "type": "warn_timeout",
      "actions": [
        { "name": "goto/posts", "op": "goto", "url": "https://jsonplaceholder.typicode.com/posts" },
        { "name": "goto/comments", "op": "goto", "url": "https://jsonplaceholder.typicode.com/comments" }
      ],
      "repeats": 10,
      "warmups": 1,
      "thresholds": { "*": 0.05 },
      "percent_limit": 10.0
    }
  ]
}
