import platform

def check_os_compatibility():
    print("\n--- 운영체제 호환성 검사 ---")
    os_info = {
        "system": platform.system(),
        "release": platform.release(),
        "version": platform.version()
    }
    print(f"  - 현재 시스템 정보: {os_info['system']} {os_info['release']}")
    print("  - 호환성 검증을 위해 다른 OS 환경에서 동일한 테스트를 실행해야 합니다.")
    return os_info

if __name__ == "__main__":
    check_os_compatibility()